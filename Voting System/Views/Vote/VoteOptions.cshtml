@model TbVoteOption
<div class="content-wrapper d-flex align-items-center auth">
    <div class="row flex-grow">
        <div class="col-lg-6 mx-auto">
            <div class="auth-form-light text-left p-5">
                <div class="brand-logo">
                    <img src="~/assets/images/logo.svg">
                </div>
                <h4>@ResGeneral.lblVotingPage</h4>
                
                <form asp-controller="Vote" asp-action="Save"  method="post" enctype="multipart/form-data" class="pt-3">
                    
                    <div class="form-group">
                        <label for="exampleInputUsername1">@ResAdmin.lblBestPlayer</label>
                        <select class="form-control form-control-lg" @*asp-for="Playerid"*@>
                        
                         @foreach(var item in ViewBag.Players){
                             <option value="@item.Playerid">@item.Playername</option>
                        }
                        </select>                  
                   </div>

                    <div class="form-group">
                        <label for="exampleInputUsername1">@ResAdmin.lblBestClub</label>
                        <select class="form-control form-control-lg" asp-for="Clubid">

                            @foreach (var item in ViewBag.Clubs)
                            {
                                <option value="@item.Clubid">@item.Clubname</option>
                            }
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputUsername1">@ResAdmin.lblBestCoch</label>
                        <select class="form-control form-control-lg" asp-for="Cochid">

                            @foreach (var item in ViewBag.Cochs)
                            {
                                <option value="@item.Cochid">@item.Cochname</option>
                            }
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputUsername1">@ResAdmin.lblBestGoolKeaper</label>
                        <select class="form-control form-control-lg" asp-for="Gkid">

                            @foreach (var item in ViewBag.Gks)
                            {
                                <option value="@item.Gkid">@item.Gkname</option>
                            }
                        </select>
                    </div>
                  
                    <div class="mt-3">
                        <button type="submit" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn">@ResGeneral.lblSendVote</button>
                    </div>
                  
                </form>
            </div>
        </div>
        
    </div>
</div>
